@model SuperMovie.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    
    <link href="~/Content/Youtube/style.scss" rel="stylesheet" type="text/css" />
    <link href="~/Content/Youtube/variables.scss" rel="stylesheet" type="text/css" />
    <link href="~/Content/Youtube/videoframe-styles.scss" rel="stylesheet" type="text/css" />
    <link href="~/Content/Details.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Youtube/js/main.js" type="text/javascript"></script>

</head>
<body>

    <div class="row1">
        <div class="Details-container">
            <div class="Movie-img-container">


                <img class="Movie-image" src="~/Content/Img/img2.jpg">



            </div>



            <div class="Movie-Details-container">


                <div><h1> @Model.Name</h1> </div>
                <div><p>  @Model.ReleaseDate.ToLongDateString()</p> </div>
                <div><p>  @Model.Genre.Name</p> </div>
                <div><p>  Available Copies in Stock : @Model.NumberInStock</p> </div>
                <div style="margin-top: 30px; color: rgb(255, 0, 0)"><p>  Synopsis : <br /></p> </div>
                <div class="Synopsis"><p> @Model.Description</p> </div>
            </div>
            


        </div>

