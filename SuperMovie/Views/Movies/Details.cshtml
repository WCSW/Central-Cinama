            <div class="videoBanner hiddenTransform" data-position="#playVideo1">
                <iframe data-selection="#playVideo1" width="50%" height="75%" src="@Model.VideoUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen mozallowfullscreen webkitallowfullscreen></iframe>
            </div>
            
        </div>*@


